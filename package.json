{
  "name": "quran",
  "description": "A simple Quran app",
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/eslint": "^8.4.1",
    "@types/node": "^17.0.12",
    "@types/prettier": "^2.4.3",
    "dprint": "^0.21.2",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "pinst": "^2.1.6",
    "prettier": "^2.5.1",
    "turbo": "^1.1.1",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "tanzeel": "pnpm --filter=./apps/tanzeel",
    "tanzeel:dev": "turbo run dev --scope=@quran/tanzeel",
    "tanzeel:build": "turbo run build --scope=@quran/tanzeel",
    "build": "turbo run build --parallel",
    "dev": "turbo run dev --parallel --no-cache",
    "format": "pnpm dprint fmt",
    "lint": "turbo run lint --parallel"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "packageManager": "pnpm@6.28.0"
}
