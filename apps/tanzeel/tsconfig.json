{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite-plugin-svgr/client", "unplugin-icons/types/react"],
    "paths": {
      "@/*": ["./src"],
      "@state": ["./src/state"],
      "@utils": ["./src/utils"],
      "@components": ["./src/components"]
    }
  },
  "include": ["./src", "./src-tauri/scripts"]
}
